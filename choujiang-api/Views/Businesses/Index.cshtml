@model IEnumerable<Components.Domains.Business>

@{
    ViewBag.Title = "商家";
}


<p>
    <a style="margin-top: 25px" href="/businesses/create" class="btn btn-primary">添加商家</a>
</p>
<table class="table">
    <tr>
        <th>
            商家名称
        </th>
        <th>
            入驻时间
        </th>
        <th>
            提供商品
        </th>
        <th>
            操作
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                <a href="#">查看列表</a>
            </td>  
            <td>
                @Html.ActionLink("修改", "Edit", new { id = item.Id }) |
                @Html.ActionLink("详情", "Details", new { id = item.Id }) |
                @Html.ActionLink("删除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
