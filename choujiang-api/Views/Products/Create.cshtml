@model Components.Domains.Products

@{
    ViewBag.Title = "添加产品";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data", id = "form" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">产品名称</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <label class="control-label col-md-2">开奖时间</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.OpenTime, new { htmlAttributes = new { @class = "form-control", id = "datetimepicker" } })
            @Html.ValidationMessageFor(model => model.OpenTime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">提供商</label>
        <div class="col-md-10">
            @Html.DropDownList("BusinessId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BusinessId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">产品头图</label>
        <div class="col-md-10">
            <input type="file" name="productHeadImg" value="" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="确认" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    <a style="margin-top: 25px" href="/businesses/Index" class="btn btn-primary">返回产品列表</a>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $('#datetimepicker').datetimepicker({
            format: 'yyyy-mm-dd hh:ii',
            language:'zh-CN',
            weekStart: 0, //一周从哪一天开始
            todayBtn: 1, //
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            forceParse: 0
        });
    </script>
}
