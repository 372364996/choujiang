@model Components.Domains.Products

@{
    ViewBag.Title = "修改产品";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { enctype = "multipart/form-data", id = "form" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label class = "control-label col-md-2" >产品名称</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">开奖时间</label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.OpenTime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.OpenTime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">产品提供商</label>

        <div class="col-md-10">
            @Html.DropDownList("BusinessId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BusinessId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">产品Bannar图</label>

        <div class="col-md-10">
            <img src="~/Upload/ProductHeadImg/@Model.ProductHeadImg" alt="@Model.Name" width="150px" />
            <input type="file" name="productHeadImg" value="" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="保存" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
