@model IEnumerable<Components.Domains.Products>

@{
    ViewBag.Title = "产品";
}
<p>
    <a style="margin-top: 25px" href="/products/create" class="btn btn-primary">添加产品</a>
</p>
<table class="table">
    <tr>
        <th>
            产品名称
        </th>
        <th>
           提供商
        </th>
        <th>
          添加时间
        </th>
        <th>
          开奖时间
        </th>
        <th>操作</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Business.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpenTime)
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id=item.Id }) |
            @Html.ActionLink("详情", "Details", new { id=item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
